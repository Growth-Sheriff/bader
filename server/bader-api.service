[Unit]
Description=BADER API Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/bader-server/api
Environment="PATH=/opt/bader-server/venv/bin"
Environment="BADER_ADMIN_KEY=bader-admin-change-this-key"
ExecStart=/opt/bader-server/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
